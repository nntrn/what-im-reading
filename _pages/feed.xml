---
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
	<title>{%- assign title=site.title|default: site.name -%}{{title|xml_escape}}</title>
	<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
	<link>{{ site.url }}</link>
	<link href="{{ page.url | absolute_url }}" rel="self" type="application/atom+xml" />
	<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
	{%- for book in site.data.books %}
		{%- if book.count < 10 -%}{% else %}
		{%- assign booktitle=book.title|replace:'"',""|split: " ("|first|split: ","|first|split:":"|first %}
		<item>
			<title>{{ booktitle | xml_escape }} - Highlights</title>
			<description>{{book.author| xml_escape}}</description>
			<pubDate>{{ book.created | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
			<link>{{ book.url | absolute_url }}</link>
			<guid isPermaLink="true">{{ book.url | absolute_url }}</guid>
			<category>{{ book.tags | xml_escape }}</category>
		</item>
		{% endif -%}
	{%- endfor -%}
</channel>
</rss>
